<div class = "container">
    <div class="row"></br></div>
    <% if (req.session.user) { %> 
        <div class="col-md-6 col-md-offset-3 alert alert-info" align="center">
            <h1> Hello, <%= req.session.user.username %>!! </h1>
            <small> Want to register new account? <a href="/register"> Register here </a></small></br>
            <small> Want to submit a form? <a href="/form"> Go to form here </a></small></br>
            <small> Are you done? <a href="/logout"> Logout here </a></small></br>
        </div>
    <% } %> 

    <div class="row">
        <div class="col-md-12">
            <div class="page-header">
                <h2>Submissions</h2>
            </div>

            <div class="well">
                <table class="table table-hover table-striped" style="table-layout: fixed;word-wrap: break-word;">
                    <thead>
                        <tr>
                            <th> First Name </th>
                            <th> Last Name </th>
                            <th> Grade </th>
                            <th> Comments </th>
                            <th> &nbsp; </th>
                        </tr>
                    </thead>

                    <tbody>
                        <% item.forEach(function(i){ %>
                        <tr>
                            <td> <%= i.firstName %> </td>
                            <td> <%= i.lastName %> </td>
                            <td> <%= i.grade %> </td>
                            <td> <%= i.comment %></td>
                            <td> 
                                <a class="btn btn-success" href="<%= '/list/' + i.id %>" role="button">View</a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <div class="form-group">
                    <a class="btn btn-info" href="/download" role="button">Download PDF of whole list</a>
                </div>
            </div>
        </div>
    </div>
</div>





