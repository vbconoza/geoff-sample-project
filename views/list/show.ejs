<div class = "container">
    <div class="row"></br></div>

    <% if (req.session.user) { %> 
        <div class="col-md-6 col-md-offset-3 alert alert-info" align="center">
            <h1> Hello, <%= req.session.user.username %>!! </h1>
            <% if (req.session.admin) { %> 
                <small> I see you're an admin. Want to see all submissions? <a href="/list"> See list here </a></small></br>
            <% } %>
            <small> Go back to form? <a href="/form"> Go to form here </a></small></br>
            <small> Want to register new account? <a href="/register"> Register here </a></small></br>
            <small> Are you done? <a href="/logout"> Logout here </a></small></br>
        </div>
    <% } %> 

    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="page-header">
                <h1>Item</h1>
            </div>

            <div class="well">
                <div class="form-group">
                    <label> First Name </label>
                    <p> <%= item.firstName %> </p>
                </div>
                <div class="form-group">
                    <label> Last Name </label>
                    <p> <%= item.lastName %> </p>
                </div>
                <div class="form-group">
                    <label> Grade </label>
                    <p> <%= item.grade %> </p>
                </div>
                <div class="form-group">
                    <label> Comments </label>
                    <p> <%= item.comment %> </p>
                </div>
                <div class="form-group">
                    <a class="btn btn-info" href="<%= '/download?id=' + item.id %>" role="button">Download PDF</a>
                </div>
            </div>
        </div>
    </div>
</div>





