<div class = "container">
    <div class="row"></br></div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="page-header">
                <h1>Login</h1>
                <small> Don't have an account yet? <a href="/register"> Register here </a></small>
            </div>
            <form id="login" class="well" action="/login" method="POST">
                <% if (req.session.flash && req.session.flash.error) { %>
                    <div class="alert alert-danger" role="alert"><%=req.flash('error')%></div>
                <% } %>
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" name="username" placeholder="vannyconoza">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="p@s$w0rd">
                </div>
                <button type="submit" class="btn btn-default" value="Submit">Submit</button>
            </form>
        </div>
    </div>
</div>